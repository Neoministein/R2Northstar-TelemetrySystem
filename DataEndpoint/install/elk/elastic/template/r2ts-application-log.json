{
  "index_patterns": [
    "r2ts-application-log-*"
  ],
  "settings": {
    "number_of_shards": "1",
    "auto_expand_replicas": "0-1"
  },
  "mappings" : {
    "properties" : {
      "@timestamp" : {
        "type" : "date"
      },
      "segment" : {
        "properties" : {
          "class" : {
            "type" : "keyword"
          },
          "level" : {
            "type" : "keyword"
          },
          "message" : {
            "type" : "keyword"
          },
          "requestId" : {
            "type" : "keyword"
          },
          "timestamp" : {
            "type" : "date",
            "format": "yyyy-MM-dd HH:mm:ss"
          }
        }
      }
    }
  },
  "aliases": {
      "r2ts-application-log": {}
  },
  "version": 3
}